{# empty Twig template #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/general.css') }}" rel="stylesheet">
    <link href="{{ asset('css/search.css') }}" rel="stylesheet">
{% endblock stylesheets %}


{% block body %}
    <div class="container">
        <div class="row voffset3"> 
            <div class="col-md-6">
                <h2>Statistics per categories</h2>
                
                <div><b>Corpus</b>: {{ corpus.name }}</div>
                
                <div class="voffset3 text-center">
                    {{ render_hinclude(controller('AppBundle:Search:statisticsByCategoryIntern', {'corpus_id': corpus.id}), 
                            {'default': 'misc/wait.html.twig'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/hinclude.js') }}"></script>
{% endblock %}