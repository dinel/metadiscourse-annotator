{# app/Resources/views/FrontPAge/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/general.css') }}" rel="stylesheet">
    <link href="{{ asset('css/front_page.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
    <div class="container">
        <div class="row header">
            <div class="col-md-8 col-md-offset-2 highlighted">
                <p class="text-right">
                    {% if app.user %}
                        Hello {{ app.user }}!
                    {% else %}
                        <a href="/login">Login</a>
                    {% endif %}
                </p>
            </div>
        </div>
                
        <div class="row voffset5">
            <div class="col-md-3 col-md-offset-2">
                <div class="options upload"><a href="/admin/corpora/">Manage corpora</a></div>
            </div>            
            <div class="col-md-3 col-md-offset-2">
                <div class="options annotate"><a href="/admin/corpora/">Annotate corpus</a></div>
            </div>
        </div>
                
        <div class="row voffset5">
            <div class="col-md-3 col-md-offset-2">
                <div class="options analyse"><a href="/search">Analyse corpus</a></div>
            </div>
            
            <div class="col-md-3 col-md-offset-2">
                <div class="options configure-system"><a href="/admin">Configure settings</a></div>
            </div>
        </div>
                
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}

